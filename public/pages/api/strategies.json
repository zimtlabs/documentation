{
  "components": {

    "schemas": {

      "strategy-receipt": {
        "type": "object",
        "properties": {
          "received_at": {
            "type": "integer",
            "format": "int32",
            "description": "Database insertion date and time in unix (milliseconds) format",
            "example": 1581420369765
          },
          "uploader_address": {
            "$ref": "base.json#/components/schemas/address"
          }
        }
      },
      "Strategy": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "base.json#/components/schemas/id"
          },
          "meta": {
            "$ref": "#/components/schemas/Strategy-meta"
          },
          "data": {
            "$ref": "#/components/schemas/Strategy-data"
          },
          "signature": {
            "$ref": "base.json#/components/schemas/signature"
          },
          "receipt": {
            "$ref": "#/components/schemas/strategy-receipt"
          }
        },
        "required": [
          "id",
          "meta",
          "signature",
          "receipt"
        ],
        "additionalProperties": false
      },
      "Strategies": {
        "type": "object",
        "properties": {
          "response": {
            "type": "array",
            "minItems": 0,
            "maxItems": 50,
            "items": {
              "$ref": "#/components/schemas/Strategy"
            }
          },
          "meta": {
            "$ref": "base.json#/components/schemas/meta-response"
          },
          "pagination": {
            "$ref": "base.json#/components/schemas/pagination-response"
          }
        }
      },
      "Strategy-Created": {
        "type": "object",
        "properties": {
          "proof": {
            "$ref": "base.json#/components/schemas/proof"
          },
          "id": {
            "$ref": "base.json#/components/schemas/id"
          },
          "receipt": {
            "$ref": "#/components/schemas/strategy-receipt"
          }
        },
        "required": [
          "proof",
          "id",
          "receipt"
        ],
        "additionalProperties": false
      },
      "Strategy-meta": {
        "type": "object",
        "properties": {
          "created_by": {
            "$ref": "base.json#/components/schemas/address"
          },
          "timestamp": {
            "$ref": "base.json#/components/schemas/date"
          },
          "data_hash": {
            "$ref": "base.json#/components/schemas/data-hash"
          }
        },
        "additionalProperties": false,
        "required": [
          "created_by",
          "timestamp",
          "data_hash"
        ]
      },
      "Strategy-data": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "Type of persistent storage"
          },
          "interval": {
            "type": "number",
            "description": "Bundling interval expressed in milliseconds."
          },
          "config": {
            "$ref": "#/components/schemas/Strategy-config"
          },
          "info": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "environment": {
                "type": "string"
              },
              "documents": {
                "type": "array",
                "uniqueItems": true,
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "properties": {
                      "type": "object"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "id",
                    "name",
                    "type"
                  ]
                },
                "additionalItems": false
              }
            },
            "additionalProperties": false,
            "required": [
              "name",
              "environment"
            ]
          },
          "properties": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "type",
          "interval",
          "config",
          "info"
        ]
      },
      "Strategy-config": {
        "type": "object",
        "properties": {
          "proxy_rul": {
            "$ref": "bundles.json#/components/schemas/upload-url"
          }
        },
        "additionalProperties": false,
        "required": [
          "proxy_url"
        ]
      },
      "Strategy-Create": {
        "type": "object",
        "properties": {
          "meta": {
            "$ref": "#/components/schemas/Strategy-meta"
          },
          "data": {
            "$ref": "#/components/schemas/Strategy-data"
          },
          "signature": {
            "$ref": "base.json#/components/schemas/signature"
          }
        },
        "required": [
          "meta",
          "data",
          "signature"
        ]
      },
      "Activated": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string"
          },
          "meta": {
            "$ref": "base.json#/components/schemas/meta-response"
          }
        }
      },
      "Deactivated": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          },
          "meta": {
            "$ref": "base.json#/components/schemas/meta-response"
