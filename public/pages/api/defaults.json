            "log": { "type": "boolean" },
            "email": { "type": "boolean" },
            "sms": { "type": "boolean" },
            "push": { "type": "boolean" }
        },
        "additionalProperties": false
      },
      "Default-data-properties-notification-strategy": {
        "title": "Notification strategy",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "type": {
                "type": "string",
                "enum": ["plan"]
            },
            "cooldown": {
                "type": "number"
            },
            "conditions": { "$ref": "#/components/schemas/Default-data-properties-notification-strategy-condition" },
            "send": { "$ref": "#/components/schemas/Default-data-properties-notification-strategy-send" },
            "message": { "type": "string" },
            "cta": { "type": "string" }
        },
        "additionalProperties": false,
        "required": ["id", "type", "cooldown", "conditions", "send"]
    },
      "Default-data": {
        "type": "object",
