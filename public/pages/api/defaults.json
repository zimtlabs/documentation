            "value": {
                "type": "integer"
            },
            "unit": {
                "type": "string",
                "enum": ["minute", "hour", "day", "month", "year"]
            }
        },
        "additionalProperties": false,
        "required": ["value", "unit"]
      },
      "Default-data-properties-notification-strategy-condition": {
        "type": "object",
