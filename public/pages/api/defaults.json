            "used": {
                "type": "number"
            },
            "period": {
                "type": "string",
                "enum": ["hour", "day", "month", "year"]
            },
            "collection": {
                "type": "string",
                "enum": ["assets", "events", "documents", "accounts", "permissions", "apiKeys", "hooks", "services", "organizationApps"]
