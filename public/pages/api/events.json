                  "type": "number"
                },
                "minItems": 2,
                "maxItems": 2,
                "additionalItems": false
              }
            },
            "additionalProperties": false,
            "required": [
              "type",
              "coordinates"
            ]
          }
        },
        "additionalProperties": false,
        "required": [
          "type",
          "geometry"
        ]
      },
      "identifiers": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "additionalItems": false
