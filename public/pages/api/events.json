            "type": {
              "type": "string"
            },
            "properties": {
              "type": "object"
            }
          },
          "additionalProperties": false,
          "required": [
            "id",
            "name",
            "type"
          ]
        },
        "additionalItems": false
      },
      "location": {
        "type": "object",
