{
  "components": {

    "schemas": {

      "query-plans": {
        "type": "object",
        "properties": {
          "query": {
            "type": "object",
            "properties": {
              "plans": {
                "type": "array",
                "items": {
                  "$ref": "base.json#/components/schemas/query-operator"
                },
                "minItems": 0
              }
            }
          },
          "limit": {
            "$ref": "base.json#/components/schemas/limit"
          },
          "skip": {
            "$ref": "base.json#/components/schemas/skip"
          }
        }
      },
      "Plan-data-price": {
        "type": "object",
        "properties": {
            "value": {
                "oneOf": [
                    { "type": "string" },
                    { "type": "number" }
                ]
            },
            "currency": { "type": "string" },
            "frequency": {
                "type": "string",
                "enum": ["month", "year"]
            },
            "per_user": { "type": "boolean" }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "Plan-data-prices": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Plan-data-price" },
        "minItems": 1,
        "additionalItems": false
      },
      "Plan-data-limits": {
        "type": "object",
        "properties": {
            "assets or events or documents or accounts or permissions or apiKeys or hooks or services or organizationApps": {
                "type": "object",
                "properties": {
                    "hour or day or month or year or total": { "type": "number" }
                },
                "additionalProperties": false
            }
        },
        "additionalProperties": false
      },
      "Plan-data-alerts": {
        "type": "object",
        "properties": {
            "assets or events or documents or accounts or permissions or apiKeys or hooks or services or organizationApps": {
                "type": "object",
                "properties": {
                    "hour or day or month or year or total": { "type": "boolean" }
                },
                "additionalProperties": false
            }
        },
        "additionalProperties": false
      },
      "Plan-data": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "active": { "type": "boolean" },
          "private": { "type": "boolean" },
          "default": { "type": "boolean" },
          "price": { "$ref": "#/components/schemas/Plan-data-prices" },
          "limits": { "$ref": "#/components/schemas/Plan-data-limits" },
          "alerts": { "$ref": "#/components/schemas/Plan-data-alerts" },
          "properties": { "type": "object" }
        },
        "required": [
          "name",
          "price",
          "limits"
        ]
      },
      "Plan-Create": {
        "type": "object",
        "properties": {
          "object": {
            "$ref": "base.json#/components/schemas/object-simple"
          },
          "data": {
            "$ref": "#/components/schemas/Plan-data"
          }
        },
        "required": [
          "object",
          "data"
        ]
      },
      "Plan": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "base.json#/components/schemas/id"
          },
          "meta": {
            "$ref": "base.json#/components/schemas/object-meta-simple"
          },
          "signature": {
            "$ref": "base.json#/components/schemas/signature"
          },
          "data": {
            "$ref": "#/components/schemas/Plan-data"
          },
          "receipt": {
            "$ref": "base.json#/components/schemas/receipt"
          }
        },
        "required": [
          "id",
          "meta",
          "signature",
          "data",
          "receipt"
        ],
        "additionalProperties": false
      },
      "Plans": {
        "type": "object",
        "properties": {
          "response": {
            "type": "array",
            "minItems": 0,
            "maxItems": 50,
            "items": {
              "$ref": "#/components/schemas/Plan"
            }
          },
          "meta": {
            "$ref": "base.json#/components/schemas/meta-response"
          },
          "pagination": {
            "$ref": "base.json#/components/schemas/pagination-response"
          }
        }
      }

    },
    "examples": {

      "query-plans": {
        "query": {
          "plans": [{
            "field": "data.name",
            "operator": "starts-with",
            "value": "Free"
          }]
        },
        "limit": 45,
        "skip": "30"
      },
      "Plan": {
        "response": {
          "id": "0x1512258c1a082a1148e655cf4abf13b914e31e7e485191c2b6b5ee466e03c951",
          "meta": {
            "created_by": "0x678b3c5090B25b3a63120CF0218750886e37A96E"
          },
          "data": {
            "name": "Custom plan",
            "active": true,
            "price": [
                { "value": "free", "frequency": "month" }
            ],
            "alerts": {
                "assets": { "month": true, "total": true },
                "events": { "month": true, "total": true },
                "documents": { "month": true, "total": true }
            }
          },
          "signature": "0xed4f59dbd23ac9ea359f3b9215eca3ceb34e08e29b1f704fa198468cae08f9f0016e...",
          "receipt": {
            "received_at": 1579967810000
          }
        },
        "meta": {
          "code": 200,
          "message": "Ok"
        }
      },
      "Plan-update": {
        "data": {
          "active": true
        }
      },
      "Plans": {
        "response": [{
          "id": "0x1512258c1a082a1148e655cf4abf13b914e31e7e485191c2b6b5ee466e03c951",
          "meta": {
            "created_by": "0x678b3c5090B25b3a63120CF0218750886e37A96E"
          },
          "data": {
            "name": "Custom plan",
            "active": true,
            "price": [
                { "value": "free", "frequency": "month" }
            ],
            "alerts": {
                "assets": { "month": true, "total": true },
                "events": { "month": true, "total": true },
                "documents": { "month": true, "total": true }
            }
          },
          "signature": "0xed4f59dbd23ac9ea359f3b9215eca3ceb34e08e29b1f704fa198468cae08f9f0016e...",
          "receipt": {
            "received_at": 1579967810000
          }
        }],
        "meta": {
          "code": 200,
          "message": "Ok"
        },
        "pagination": {
          "limit": 30,
          "skip": 30,
          "total": 120
        }
      }

    },
    "parameters": {

      "id-plan": {
        "name": "id",
        "description": "ID of a plan",
        "in": "path",
        "schema": {
          "$ref": "base.json#/components/schemas/id"
        }
      }

    },

    "responses": {

      "Plan": {
        "description": "Plan result",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Plan"
            },
            "example": {
              "$ref": "#/components/examples/Plan"
            }
          }
        }
      },
      "Plans": {
        "description": "Plan results",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Plans"
            },
            "example": {
              "$ref": "#/components/examples/Plans"
            }
          }
        }
      }

    },
    "requestBodies": {

      "search-plans": {
        "description": "Search query",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/query-plans"
            },
            "example": {
              "$ref": "#/components/examples/query-plans"
            }
          }
        }
      },
      "Plan-Create": {
        "description": "Plan create",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Plan"
            },
            "example": {
              "$ref": "#/components/examples/Plan"
            }
          }
        }
      },
      "Plan-Update": {
        "description": "Plan update",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Plan"
            },
            "example": {
              "$ref": "#/components/examples/Plan-update"
            }
          }
        }
      }

    }

  }
}
